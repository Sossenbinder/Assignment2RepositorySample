<Window x:Class="Assignment2.View.WinnerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Over - Winner" Height="200" Width="400" WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Message that displays the winner -->
            <TextBlock x:Name="WinnerMessage" FontSize="18" FontWeight="Bold" Margin="10"/>

            <!-- Button to close the dialog -->
            <Button Content="Close" Width="100" Margin="10" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
