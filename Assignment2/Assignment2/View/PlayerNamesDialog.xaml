<Window x:Class="Assignment2.View.PlayerNamesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Player Names" Height="200" Width="400" WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Enter Player 1's name:" Margin="10"/>
            <TextBox x:Name="Player1NameTextBox" Width="200" Margin="10"/>

            <TextBlock Text="Enter Player 2's name:" Margin="10"/>
            <TextBox x:Name="Player2NameTextBox" Width="200" Margin="10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="OK" Width="100" Margin="5" Click="OKButton_Click"/>
                <Button Content="Cancel" Width="100" Margin="5" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
